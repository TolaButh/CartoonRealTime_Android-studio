<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    >
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/imgv_more_menu"
       android:src="@drawable/ic_more"
       android:layout_gravity="right"

       />

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="5dp"

       >
       <com.google.android.material.imageview.ShapeableImageView
           android:layout_width="74dp"
           android:layout_height="74dp"
           android:id="@+id/img_cartoon_book"
           android:src="@drawable/book"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginLeft="10dp"
           app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
           app:strokeWidth="3dp"
           app:strokeColor="#3feadf"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:id="@+id/tv_cartoon_book_name"
           android:fontFamily="@font/lora"
           android:textStyle="bold"
           android:textColor="@color/teal_700"
           android:text="Cartoon Book"
           android:textSize="20dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toRightOf="@id/img_cartoon_book"
           app:layout_constraintBottom_toTopOf="@id/tv_cartoon_book_author"
           android:layout_marginLeft="10dp"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:id="@+id/tv_cartoon_book_author"
           android:fontFamily="@font/lora"
           android:textStyle="bold"
           android:textColor="@color/teal_700"
           android:text="Author : "
           android:textSize="18dp"
           app:layout_constraintTop_toBottomOf="@id/tv_cartoon_book_name"
           app:layout_constraintLeft_toRightOf="@id/img_cartoon_book"
           android:layout_marginLeft="10dp"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:id="@+id/tv_cartoon_book_issue"
           android:fontFamily="@font/lora"
           android:textStyle="bold"
           android:textColor="@color/teal_700"
           android:text="Issue : "
           android:textSize="16dp"
           app:layout_constraintTop_toBottomOf="@id/tv_cartoon_book_author"
           app:layout_constraintLeft_toRightOf="@id/img_cartoon_book"
           app:layout_constraintBottom_toTopOf="@id/tv_cartoon_book_issue"
           android:layout_marginLeft="10dp"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:id="@+id/tv_cartoon_book_publisher"
           android:fontFamily="@font/lora"
           android:textStyle="bold"
           android:textColor="@color/teal_700"
           android:text="publisher : "
           android:textSize="16dp"
           app:layout_constraintTop_toBottomOf="@id/tv_cartoon_book_issue"
           app:layout_constraintLeft_toRightOf="@id/img_cartoon_book"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginLeft="10dp"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_autor_name"
           android:fontFamily="@font/lora"
           android:text="Adachi Mituce"
           android:textSize="16sp"
           app:layout_constraintLeft_toRightOf="@id/tv_cartoon_book_author"
           app:layout_constraintTop_toTopOf="@id/tv_cartoon_book_author"
           app:layout_constraintBottom_toBottomOf="@id/tv_cartoon_book_author"
           android:layout_marginLeft="10dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_issue_no"
           android:fontFamily="@font/lora"
           android:text="1"
           android:textSize="14sp"
           app:layout_constraintLeft_toRightOf="@id/tv_cartoon_book_issue"
           app:layout_constraintTop_toTopOf="@id/tv_cartoon_book_issue"
           app:layout_constraintBottom_toBottomOf="@id/tv_cartoon_book_issue"
           android:layout_marginLeft="25dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_publisher"
           android:fontFamily="@font/lora"
           android:text="Mahasaracam"
           android:textSize="14sp"
           app:layout_constraintLeft_toRightOf="@id/tv_cartoon_book_publisher"
           app:layout_constraintTop_toTopOf="@id/tv_cartoon_book_publisher"
           app:layout_constraintBottom_toBottomOf="@id/tv_cartoon_book_publisher"
           android:layout_marginLeft="10dp"
           />

   </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>